{
  "name": "rhodes-headquarters",
  "displayName": "罗德岛远程指挥部",
  "type": "module",
  "version": "0.2.0-beta.0",
  "publishVersion": "0.2.0.0",
  "private": true,
  "packageManager": "pnpm@9.3.0",
  "description": "一款用于监控罗德岛运行状态的浏览器扩展",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip --browser firefox",
    "postinstall": "wxt prepare && simple-git-hooks",
    "typecheck": "tsc --noEmit",
    "e2e": "PW_EXPERIMENTAL_SERVICE_WORKER_NETWORK_EVENTS=1 playwright test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@ark-ui/vue": "^3.6.0",
    "@webext-core/proxy-service": "^1.2.0",
    "@zag-js/avatar": "^0.55.0",
    "@zag-js/dialog": "^0.55.0",
    "@zag-js/hover-card": "^0.55.0",
    "@zag-js/menu": "^0.55.0",
    "@zag-js/presence": "^0.55.0",
    "@zag-js/switch": "^0.55.0",
    "@zag-js/tabs": "^0.55.0",
    "@zag-js/toast": "^0.55.0",
    "@zag-js/vue": "^0.55.0",
    "date-fns": "^3.6.0",
    "js-md5": "^0.8.3",
    "ofetch": "^1.3.4",
    "vue-router": "^4.3.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.14.0",
    "@iconify/json": "^2.2.218",
    "@playwright/test": "^1.44.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@unocss/eslint-plugin": "^0.60.4",
    "@unocss/reset": "^0.60.4",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/compiler-sfc": "^3.4.27",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^10.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.4.0",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.5",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "unocss": "^0.60.4",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-vue-router": "^0.9.1",
    "vite-plugin-vue-devtools": "^7.2.1",
    "vitest": "^1.6.0",
    "vue": "^3.4.27",
    "vue-demi": "^0.14.8",
    "wxt": "^0.18.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint"
      ]
    },
    "overrides": {
      "jiti": "1.21.0"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
