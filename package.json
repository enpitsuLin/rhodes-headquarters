{
  "name": "rhodes-headquarters",
  "displayName": "罗德岛远程指挥部",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.9.0",
  "description": "一款用于监控罗德岛运行状态的浏览器扩展",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "npm run build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache .",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@zag-js/avatar": "^0.24.0",
    "@zag-js/dialog": "^0.24.0",
    "@zag-js/hover-card": "^0.24.0",
    "@zag-js/menu": "^0.24.0",
    "@zag-js/tabs": "^0.24.0",
    "@zag-js/vue": "^0.24.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.27",
    "@ffflorian/jszip-cli": "^3.4.1",
    "@iconify/json": "^2.2.128",
    "@playwright/test": "^1.39.0",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^20.8.6",
    "@types/webextension-polyfill": "^0.10.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@unocss/reset": "^0.56.5",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vueuse/core": "^10.5.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.51.0",
    "esno": "^0.17.0",
    "fs-extra": "^11.1.1",
    "jsdom": "^22.1.0",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unocss": "^0.56.5",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.17.0",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6",
    "vue": "^3.3.4",
    "vue-demi": "^0.14.6",
    "web-ext": "^7.8.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
