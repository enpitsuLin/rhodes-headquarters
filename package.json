{
  "name": "rhodes-headquarters",
  "displayName": "罗德岛远程指挥部",
  "type": "module",
  "version": "0.1.0-beta.0",
  "publishVersion": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.7",
  "description": "一款用于监控罗德岛运行状态的浏览器扩展",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip --browser firefox",
    "postinstall": "wxt prepare && simple-git-hooks",
    "typecheck": "tsc --noEmit",
    "e2e": "playwright test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "devtools": "vue-devtools"
  },
  "dependencies": {
    "@vue/devtools": "^7.0.27",
    "@zag-js/avatar": "^0.46.0",
    "@zag-js/dialog": "^0.46.0",
    "@zag-js/hover-card": "^0.46.0",
    "@zag-js/menu": "^0.46.0",
    "@zag-js/tabs": "^0.46.0",
    "@zag-js/vue": "^0.46.0",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "idb-keyval": "^6.2.1",
    "js-md5": "^0.8.3",
    "ofetch": "^1.3.4",
    "tailwind-merge": "^2.2.2",
    "vue-router": "^4.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.14.0",
    "@iconify/json": "^2.2.201",
    "@playwright/test": "^1.43.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@unocss/eslint-plugin": "^0.59.2",
    "@unocss/reset": "^0.59.3",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/compiler-sfc": "^3.4.22",
    "@vue/test-utils": "^2.4.5",
    "@vueuse/core": "^10.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "unocss": "^0.59.3",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-router": "^0.8.6",
    "vitest": "^1.5.0",
    "vue": "^3.4.22",
    "vue-demi": "^0.14.7",
    "wxt": "^0.17.12"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
