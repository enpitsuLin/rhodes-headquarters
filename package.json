{
  "name": "rhodes-headquarters",
  "displayName": "罗德岛远程指挥部",
  "type": "module",
  "version": "0.2.0-beta.0",
  "publishVersion": "0.2.0.0",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "description": "一款用于监控罗德岛运行状态的浏览器扩展",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
    "build": "wxt build",
    "build:firefox": "wxt build --browser firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip --browser firefox",
    "postinstall": "wxt prepare && simple-git-hooks",
    "typecheck": "tsc --noEmit",
    "e2e": "PW_EXPERIMENTAL_SERVICE_WORKER_NETWORK_EVENTS=1 playwright test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@ark-ui/vue": "^3.7.0",
    "@unocss/preset-mini": "^0.61.5",
    "@webext-core/proxy-service": "^1.2.0",
    "date-fns": "^3.6.0",
    "js-md5": "^0.8.3",
    "ofetch": "^1.3.4",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.23.2",
    "@iconify/json": "^2.2.231",
    "@playwright/test": "^1.45.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@unocss/eslint-plugin": "^0.61.5",
    "@unocss/reset": "^0.61.5",
    "@vue/compiler-sfc": "^3.4.34",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^10.11.0",
    "@wxt-dev/module-vue": "^1.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.7.0",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.7",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "unocss": "^0.61.5",
    "unplugin-vue-router": "^0.10.1",
    "vite-plugin-vue-devtools": "^7.3.7",
    "vitest": "^2.0.4",
    "vue": "^3.4.34",
    "vue-demi": "^0.14.10",
    "wxt": "^0.19.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
